<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Flatabout Survey"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="2pt"
        android:textSize="25dp"
        android:background="#ff1ccc13"
        android:id="@+id/header"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Neighbours / PG mates"
        android:textSize="20dp"
        android:id="@+id/question"
        android:layout_below="@id/header"
        android:layout_marginTop="20dp"
        />
    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:text="Creepy"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:id="@+id/option1"
        />
    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/option1"
        android:id="@+id/option2"
        android:text="Noisy"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        />
    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/option2"
        android:id="@+id/option3"
        android:text="Intrusive"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        />
    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/option3"
        android:id="@+id/option4"
        android:text="Friendly"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        />
    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/option4"
        android:id="@+id/option5"
        android:text="Indifferent"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        />
    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/option5"
        android:id="@+id/option6"
        android:text="Other"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option7"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/option6"
        android:layout_alignTop="@id/option6"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="105dp"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textSize="9pt"
        android:padding="17dp"
        android:textColor="#ff1ccc13"
        android:layout_alignParentBottom="true"
        android:id="@+id/next"
        />
</RelativeLayout>