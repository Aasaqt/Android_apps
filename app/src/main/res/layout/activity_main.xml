<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Flatabout Survey"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="2pt"
        android:textSize="25dp"
        android:background="#ff1ccc13"
        android:id="@+id/header"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Name of the referee:"
        android:textSize="25dp"
        android:id="@+id/question"
        android:layout_below="@id/header"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Name of the person who was sent to fill this form"
        android:textSize="17dp"
        android:id="@+id/description"
        android:layout_below="@id/question"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:textSize="20dp"
        android:layout_marginTop="17dp"
        android:id="@+id/name_refree"

        android:background="@drawable/edittext"
        android:layout_below="@id/description"

        />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:padding="2pt"
        android:layout_marginTop="50dp"
        android:indeterminate="false"
        android:max="18"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:progress="1"
        android:paddingBottom="0pt"
        android:layout_below="@id/name_refree"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/progressBar1"
        android:layout_below="@id/progressBar1"
        android:text="1/18"
        android:textSize="15dp"
        android:paddingTop="0pt"
        android:textColor="#0092ff"
        android:padding="2pt"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textSize="9pt"
        android:padding="2pt"
        android:textColor="#ff1ccc13"
        android:layout_below="@id/textView1"
        android:layout_alignParentBottom="true"
        android:id="@+id/next"
        />
</RelativeLayout>
</ScrollView>